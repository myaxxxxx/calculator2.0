<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/exchangeleft"
        android:layout_alignEnd="@+id/exchange_text1">


    </Spinner>


    <EditText
        android:id="@+id/exchange_text1"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"

        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/exchange_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15dp"
        android:layout_below="@+id/exchange_text1"
        android:layout_alignStart="@+id/exchange_text1"
        android:layout_marginTop="33dp"
        android:layout_alignEnd="@+id/exchange_text1" />

    <Button
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:id="@+id/number"
        android:layout_marginStart="11dp"
        android:layout_marginTop="27dp"
        android:background="#3399FF"
        android:text="确定"
        android:layout_below="@+id/exchange_text2"
        android:layout_toEndOf="@+id/exchange_text2" />




</RelativeLayout>