<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exchangeright"
        android:layout_marginStart="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


    </Spinner>


    <EditText
        android:id="@+id/exchange_text3"

        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/exchangeright" />

    <EditText
        android:id="@+id/exchange_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15dp"
        android:layout_below="@+id/exchangeright"
        android:layout_alignEnd="@+id/exchange_text3"
        android:layout_toEndOf="@+id/exchangeright" />

    <Button
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:id="@+id/exchange2"
        android:layout_marginStart="15dp"
        android:background="#3399FF"
        android:text="确定"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/exchange_text3"
        android:layout_marginBottom="37dp" />

</RelativeLayout>